<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<StackPane fx:id="clientScreen" fx:controller="crayon.typeracer.client.ClientController"
           xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox id="client-config" fx:id="clientConfig">
        <Text text="CLIENT CONFIG"/>
        <HBox>
            <Label text="IP Address"/>
            <TextField fx:id="serverIp" />
        </HBox>
        <HBox>
            <Label text="Port"/>
            <TextField fx:id="serverPort" />
        </HBox>
        <Button text="Connect" onAction="#connect"/>
        <Button text="Cancel" onAction="#backToMainMenu"/>
    </VBox>
</StackPane>