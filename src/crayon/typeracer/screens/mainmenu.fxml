<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane id="mainmenu-screen" fx:controller="crayon.typeracer.MainMenuController"
           xmlns:fx="http://javafx.com/fxml" alignment="center">
    <ImageView >
        <image>
            <Image url="file:res/countryside-px.png"/>
        </image>
    </ImageView>
    <VBox id="menu">
        <Button styleClass="menu-btn" text="Start SERVER" onAction="#showServerConfig" />
        <Button styleClass="menu-btn" text="Start CLIENT" onAction="#showClientConfig" />
        <Button styleClass="menu-btn" text="Exit" onAction="#exitGame" />
    </VBox>
</StackPane>